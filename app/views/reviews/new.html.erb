                  //<![CDATA[
                  $(function () {
                      $('#review_due_date').datepicker(datepickerOptions);
                  });
                  //]]>
              </script>
            </p>

          </div>

          <div class="splitcontentright">

            <p>Participants here</p>


          </div>
        </div>
      </div>

      <% include_calendar_headers_tags %>


